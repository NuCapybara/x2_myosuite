<mujoco model="light_background">
    <visual>
        <map znear="0.01" zfar="500" />
        <rgba haze="0.9 0.9 0.9 1" fog="0.95 0.95 0.95 1" />
    </visual>

    <!-- World body definition -->
    <worldbody>
        <!-- Add a large light-colored sphere to simulate a light background -->
        <!-- <geom type="sphere" size="100" pos="0 0 0" rgba="1 1 1 1" /> -->

        <!-- Add a light source -->
        <light diffuse="1 1 1" specular="0 0 0" pos="0 0 5" dir="0 0 -1" />
    </worldbody>
</mujoco>
